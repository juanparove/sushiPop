@model IEnumerable<SushiPop.Models.CarritoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Tu Carrito</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <p>Producto</p>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carrito)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                    <img src=@item.Producto.Foto alt="imagen" width="50px"
                         height="50px" />
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar del carrito</a>
                    </td>
                </tr>
                
            }
   
        </tbody>

    </table>

<a asp-controller="Pedidos" asp-action="GenerarPedido">Finalizar Pedido</a>


